{% extends 'backend/admin_base.html.twig' %}

{% block title %} {{ parent() }} - {{ page_title }}{% endblock %}

{% block main %}

    <div class="row">
        <div class="col-12">
                <h1>Liste des personnes</h1>
                    <form action="{{ path('backend_person_add') }}" method="POST">
                        <button class="btn btn-success">
                            Ajouter une personne
                            <i class="fas fa-plus-circle"></i> 
                        </button>
                    </form>

            
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {# Boucle #}
                            {% for person in persons %}
                            <tr>
                                <td>
                                    {{ person.id }}
                                </td>
                                <td>
                                    <a href="#">
                                        {{ person.name }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{path('backend_person_show', {'id': person.id} )}}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form class="d-inline" action="{{path('backend_person_delete', {'id': person.id} )}}" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button class="text-danger bg-white border-0">&nbsp;<i class="far fa-trash-alt"></i></button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                            {# Boucle #}
                        </tbody>
                    </table>

                    <form action="{{ path('backend_person_add') }}" method="POST">
                        <button class="btn btn-success">
                            Ajouter une personne
                            <i class="fas fa-plus-circle"></i> 
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}
